<div class='container'>
<h2 class='section-title'>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="field">
<%= f.label :email %><br />
<%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'new-user' %>
</div>

<div class="actions">
<%= f.submit "Send me reset password instructions", class: 'submit-post' %>
</div>
<% end %>
<div class='render'>
<%= render "devise/shared/links" %>
</div>
</div> 