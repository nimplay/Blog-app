<%= render 'shared/navbar' %>
<div class='container'>
  <div class='user-container'>
    <img class='user-image' src="<%= @user.photo %>">
    <div class='user-data'>
      <h1 class='name'><%= @user.name %></h1>
      <p class='post-count'>Number posts: <%= @user.postCounter %> </p>
    </div>
  </div>

  <div class='bio'>
    <h2> Bio </h2>
    <p > <%= @user.bio %> </p>
  </div>

<ul class='post-list'>
<% @user.last_three_posts.each do |post|%>
    <%= link_to post_path(@user.id, post.id) do%>
       <li class='post'>
        <h3><%= post.title %></h3>
        <p><%= post.text %></p>
        <div class='comment-like'>
        <p>üí¨ <%= post.commentsCounter %></p>
        <p>‚ù§Ô∏è <%= post.likesCounter %></p>
        </div>
    </li>
    <% end %>
  <% end %>
</ul>

  <%= link_to user_posts_path(@user.id), class:'button' do%>
    <button class='button'> See all posts </button>
  <% end %>
  <% if can? :create , @post%>
  <%= link_to user_post_new_path, class:'button' do%>
    <button class='button'> New Post </button>
  <% end %>
  <%end %>
</div>
