<h1> Users </h1>
<% @users.each do |user| %>
  <%= link_to user_path(user.id), class:'user' do %>
    <div>
      <img style ="width: 60px" src="<%= user.photo %>">
      <div>
        <h3> <%= user.name %> </h3>
        <p>Number posts: <%= user.postCounter %> </p>
      </div>
    </div>
  <% end %>
<% end %>
